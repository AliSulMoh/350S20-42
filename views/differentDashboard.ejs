<head>
    <script src="../mainLogin.js"></script>
    <link rel='stylesheet' href='/styles/stylesDashboard.css'/>
    <title>Vaccine App Dashboard</title>
</head>

<body class="container">
    <div class="topnav">
        <a class="active" href="/home">Home</a>
        <% if (user.hospitalOwner) {%>
            <a href="/myHospital">My Hospital</a>
        <% } %>
        <a href="/myRequests">My Requests</a>
        <% if (!user.medicalAccount) {%>
            <a href="/medicalRequest">Medical Upgrade</a>
        <% } %>
        <% if (!user.hospitalOwner) {%>
            <a href="/hospitalRequest">Hospital Creation</a>
        <% } %>
        <% if (user.medicalAccount) {%>
            <a href="/addVaccineInfo">Add Vaccine Information</a>
        <% } %>
        <a href="/generalInformation">General Vaccine Information</a>
        <% if (user.medicalAccount) {%>
            <a href="/addScheduleSlots">Add Schedule Openings</a>
        <% } %>
        <a href="/logout">Logout</a>
    </div>

    <main>
        <h1>User Dashboard</h1>

        <h3>Welcome to our Vaccine App!</h3>

        <b>Name: </b> <span style="font-family: sans-serif;"><%= user.username %></span><br>
        <b>Is hospital owner? </b><% if (user.hospitalOwner) {%>
        <span style="font-family: sans-serif;">Yes</span>
        <br>
            <% user.hospitalArray.forEach( (name) => { %>
                 <br><i>Owned Hospital:</i> <%= name %>
                 <br>
            <% }); %>
        <%} else {%>
        <span style="font-family: sans-serif;">No</span>
        <%} %> <br>
        <b>Is medical account? </b> <% if (user.medicalAccount) {%>
        <span style="font-family: sans-serif;">Yes</span>
        <%} else {%>
        <span style="font-family: sans-serif;">No</span>
        <%} %>
        
        <!--- forms in case we have to create users again
        <form action="/beHospitalOwner" method="post">
            <input type="Submit" value="hospital">
        </form>
        
        <form action="/beMedicalAccount" method="post">
            <input type="Submit" value="medical">
        </form> 
        --->
    </main>

</body>
