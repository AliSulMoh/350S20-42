<head>
    <script src="../mainLogin.js"></script>
    <link rel='stylesheet' href='/styles/stylesDashboard.css'/>
    <title>Vaccine App Dashboard</title>
</head>

<body class="container">
    <div class="topnav">
        <a href="/home">Home</a>
        <a href="/myHospital">My Hospital</a>
        <a class="active" href="/myRequests">My Requests</a>
        <a href="/medicalrequest">Medical Upgrade</a>
        <a href="/hospitalrequest">Hospital Creation</a>
        <a href="/">Logout</a>
    </div>

    <main>
        <h1>My Pending Requests</h1>

        <b>Name: </b> <%= user.username %> <br>
        <% if (requests) {%>
          <% requests.forEach( (request) => { %>
              <% if (user.username == request.creator.username) {%>
              <br> <%= request.creator.username %>
              <br> <%= request.description %>
              <br>
              <% } %>
          <% }); %>
          <% } %>
    </main>

</body>
